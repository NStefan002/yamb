package views

import (
	"fmt"
	"strings"
	"yamb/game"
	"yamb/i18n"
)

templ MainScoreCard(roomID string, playerID, lang string, room *game.Room) {
	{{
		player := room.GetPlayerByID(playerID)
		sc := player.ScoreCard

		filledTextStyle := ""
		switch player.Team {
		case game.Blue:
			filledTextStyle = "text-[var(--blue-accent)]"
		case game.Red:
			filledTextStyle = "text-[var(--red-accent)]"
		case game.Yellow:
			filledTextStyle = "text-[var(--yellow-accent)]"
		}

		numOfCols := len(sc.Columns)
		numOfRows := len(sc.Rows) + 1 // +1 for column names (header row)
	}}
	<table
		class="table-fixed border-collapse border-2 border-[var(--border-primary)] w-full h-full max-w-[90vw] max-h-[90vh] text-sm text-center"
		style={ fmt.Sprintf("--row-height: calc(100%%/%d); --tbody-height: calc(100%%-100%%/%d); --col-width:calc((100%%-22%%)/%d);", numOfRows, numOfRows, numOfCols) }
	>
		<thead class="bg-[var(--bg-header-field)] h-[var(--row-height)]">
			<tr>
				<th class="border-2 border-[var(--border-primary)] text-sm font-bold w-auto max-w-[22%] px-1 sm:px-2 text-center break-words"></th>
				for _, c := range sc.Columns {
					<th
						class={ fmt.Sprintf("border-2 border-[var(--border-primary)] text-sm font-bold w-[var(--col-width)] text-center break-words px-1 sm:px-2 %s", filledTextStyle) }
						title={ i18n.T(lang, "col_desc_"+c.ID) }
					>{ i18n.T(lang, "col_" + c.ID) }</th>
				}
			</tr>
		</thead>
		<tbody class="h-[var(--tbody-height)]">
			for _, r := range sc.Rows {
				<tr class="h-[var(--row-height)]">
					<th
						class="border-2 border-[var(--border-primary)] bg-[var(--bg-header-field)] px-1 sm:px-2 text-xs sm:text-sm font-bold text-center break-all word-break-break-all overflow-wrap-anywhere hyphens-auto w-auto max-w-[22%] leading-tight min-h-[2.8em] align-middle"
						title={ i18n.T(lang, "row_desc_"+r.ID) }
					>{ i18n.T(lang, "row_" + r.ID) }</th>
					for _, c := range sc.Columns {
						if strings.Contains(strings.ToLower(r.Name), "sum") {
							<td
								class={ fmt.Sprintf("border-2 border-[var(--border-primary)] bg-[var(--bg-sum-field)] text-center font-semibold text-xs sm:text-sm w-[var(--col-width)] %s", filledTextStyle) }
							>
								if sc.Scores[r.ID][c.ID] != nil {
									{ *sc.Scores[r.ID][c.ID] }
								}
							</td>
						} else {
							@ScoreCardField(roomID, player, r.ID, c.ID)
						}
					}
				</tr>
			}
		</tbody>
	</table>
}

templ ScoreCardField(roomID string, player *game.Player, rowID, colID string) {
	{{
		sc := player.ScoreCard

		filledBgStyle := ""
		filledTextStyle := ""
		switch player.Team {
		case game.Blue:
			filledBgStyle = "bg-[var(--blue-filled)]"
			filledTextStyle = "text-[var(--blue-accent)]"
		case game.Red:
			filledBgStyle = "bg-[var(--red-filled)]"
			filledTextStyle = "text-[var(--red-accent)]"
		case game.Yellow:
			filledBgStyle = "bg-[var(--yellow-filled)]"
			filledTextStyle = "text-[var(--yellow-accent)]"
		}

		selectedRowID, selectedColID := sc.GetSelectedCell()
		selected := selectedRowID == rowID && selectedColID == colID
		disabled := player.ScoreCard.IsAnnounced()
	}}
	if sc.Scores[rowID][colID] != nil {
		<td
			class={ fmt.Sprintf("border-2 border-[var(--border-primary)] text-center font-semibold text-xs sm:text-sm w-[var(--col-width)] %s %s", filledBgStyle, filledTextStyle) }
		>
			{ *sc.Scores[rowID][colID] }
		</td>
	} else if disabled {
		if selected {
			<td
				class={ fmt.Sprintf("border-2 border-[var(--border-primary)] text-center font-semibold text-xs sm:text-sm cursor-not-allowed w-[var(--col-width)] %s %s", filledBgStyle, filledTextStyle) }
				id={ "cell-" + rowID + "-" + colID }
			></td>
		} else {
			<td
				class="border-2 border-[var(--border-primary)] text-center text-xs sm:text-sm bg-white text-[var(--text-primary)] cursor-not-allowed w-[var(--col-width)]"
				id={ "cell-" + rowID + "-" + colID }
			></td>
		}
	} else if selected {
		<td
			class={ fmt.Sprintf("border-2 border-[var(--border-primary)] text-center font-semibold text-xs sm:text-sm w-[var(--col-width)] %s %s", filledBgStyle, filledTextStyle) }
			hx-post="/select-cell"
			hx-target="#main-scorecard"
			hx-swap="innerHTML"
			hx-vals={ fmt.Sprintf(`{"room_id":"%s", "row":"%s", "col":"%s"}`, roomID, rowID, colID) }
			id={ "cell-" + rowID + "-" + colID }
		></td>
	} else {
		<td
			class="border-2 border-[var(--border-primary)] text-center align-middle cursor-pointer hover:bg-[var(--bg-game-panel)] bg-[var(--bg-rolling-area)] text-xs sm:text-sm transition-colors w-[var(--col-width)]"
			hx-post="/select-cell"
			hx-target="#main-scorecard"
			hx-swap="innerHTML"
			hx-vals={ fmt.Sprintf(`{"room_id":"%s", "row":"%s", "col":"%s"}`, roomID, rowID, colID) }
			id={ "cell-" + rowID + "-" + colID }
		></td>
	}
}

templ SmallScoreCardTable(lang string, player *game.Player) {
	{{
		sc := player.ScoreCard

		filledBgStyle := ""
		filledTextStyle := ""
		switch player.Team {
		case game.Blue:
			filledBgStyle = "bg-[var(--blue-filled)]"
			filledTextStyle = "text-[var(--blue-accent)]"
		case game.Red:
			filledBgStyle = "bg-[var(--red-filled)]"
			filledTextStyle = "text-[var(--red-accent)]"
		case game.Yellow:
			filledBgStyle = "bg-[var(--yellow-filled)]"
			filledTextStyle = "text-[var(--yellow-accent)]"
		}

		announced := player.ScoreCard.IsAnnounced()
		selectedRowID, selectedColID := sc.GetSelectedCell()

		numOfCols := len(sc.Columns)
		numOfRows := len(sc.Rows) + 1
	}}
	<table
		class="table-fixed border-collapse border-2 border-[var(--border-primary)] w-full h-full max-w-[90vw] max-h-[90vh] text-xs text-center bg-[var(--bg-header-field)] h-[var(--row-height)]"
		style={ fmt.Sprintf("--row-height: calc(100%%/%d); --col-width:calc((100%%-22%%)/%d); --tbody-height: calc(100%%-100%%/%d);", numOfRows, numOfCols, numOfRows) }
	>
		<thead>
			<tr>
				<th class={ "border-2 border-[var(--border-primary)] font-bold text-center w-auto max-w-[22%] px-1 text-center break-words " + filledTextStyle }></th>
				for _, c := range sc.Columns {
					<th
						class={ fmt.Sprintf("border-2 border-[var(--border-primary)] font-bold w-[var(--col-width)] text-center break-words px-1 %s", filledTextStyle) }
					>
						{ i18n.T(lang, "col_" + c.ID) }
					</th>
				}
			</tr>
		</thead>
		<tbody class="h-[var(--tbody-height)]">
			for _, r := range sc.Rows {
				<tr class="h-[var(--row-height)]">
					<th
						class={ "border-2 border-[var(--border-primary)] bg-[var(--bg-header-field)] font-bold text-center word-break-break-all overflow-wrap-anywhere hyphens-auto w-auto max-w-[22%] leading-tight min-h-[2.5em] align-middle px-1 " + filledTextStyle }
					>
						{ i18n.T(lang, "row_" + r.ID) }
					</th>
					if strings.Contains(strings.ToLower(r.Name), "sum") {
						for _, c := range sc.Columns {
							<td
								class={ fmt.Sprintf("border-2 border-[var(--border-primary)] bg-[var(--bg-sum-field)] font-semibold text-center w-[var(--col-width)] %s", filledTextStyle) }
							>
								if sc.Scores[r.ID][c.ID] != nil {
									{ *sc.Scores[r.ID][c.ID] }
								}
							</td>
						}
					} else {
						for _, c := range sc.Columns {
							if sc.Scores[r.ID][c.ID] != nil {
								<td
									class={ fmt.Sprintf("border-2 border-[var(--border-primary)] font-semibold text-center w-[var(--col-width)] %s %s", filledBgStyle, filledTextStyle) }
								>
									{ *sc.Scores[r.ID][c.ID] }
								</td>
							} else if announced {
								if selectedRowID == r.ID && selectedColID == c.ID {
									<td
										class={ fmt.Sprintf("border-2 border-[var(--border-primary)] font-semibold text-center w-[var(--col-width)] %s %s", filledBgStyle, filledTextStyle) }
									></td>
								} else {
									<td
										class="border-2 border-[var(--border-primary)] bg-white text-[var(--text-primary)] text-center w-[var(--col-width)]"
									></td>
								}
							} else {
								<td
									class="border-2 border-[var(--border-primary)] font-semibold bg-[var(--bg-rolling-area)] text-center w-[var(--col-width)]"
								></td>
							}
						}
					}
				</tr>
			}
		</tbody>
	</table>
}

templ OtherScorecards(roomID, playerID, lang string, room *game.Room) {
	<h3 class="font-bold text-[var(--text-primary)] mb-3 text-lg">
		{ i18n.T(lang, "other_players") }
	</h3>
	{{ otherCount := len(room.Players) - 1 }}
	if otherCount <= 0 {
		<div
			class="text-[var(--text-primary)] text-sm text-center py-8 bg-white rounded-lg border-2 border-[var(--border-primary)] w-full"
		>{ i18n.T(lang, "no_other_players") }</div>
	} else if otherCount == 1 {
		<!-- Single other player: center with flex -->
		<div class="w-full h-full flex items-center justify-center p-2">
			for i := 0; i < len(room.Players); i++ {
				if room.Players[i].ID == playerID {
					{{ continue }}
				}
				<div class="w-full max-w-md bg-white rounded-lg p-2 border-2 border-[var(--border-primary)] shadow-md">
					<div class="flex justify-between items-center mb-2">
						<h4 class="font-bold text-xs text-[var(--text-primary)]">
							{ room.Players[i].Username }
						</h4>
						if room.CurrentTurn == i {
							<span class="text-[10px] text-[var(--btn-hover)] font-semibold">
								{ i18n.T(lang, "rolling") }
							</span>
						} else {
							<span class="text-[10px] text-[var(--btn-hover)] font-medium">
								{ i18n.T(lang, "waiting") }
							</span>
						}
					</div>
					<div class="mb-2" id={ "other-dice-" + room.Players[i].ID }>
						@SmallDiceRow(room.Dice, room.CurrentTurn == i)
					</div>
					<div class="flex justify-center">
						@SmallScoreCardTable(lang, room.Players[i])
					</div>
				</div>
			}
		</div>
	} else {
		<!-- 2 or more: grid layout - stack vertically on smaller screens -->
		<div class="grid grid-cols-1 xl:grid-cols-2 gap-3 w-full h-full">
			for i := 0; i < len(room.Players); i++ {
				if room.Players[i].ID == playerID {
					{{ continue }}
				}
				<div class="bg-white rounded-lg p-2 border-2 border-[var(--border-primary)] shadow-md">
					<div class="flex justify-between items-center mb-2">
						<h4 class="font-bold text-xs text-[var(--text-primary)] break-words max-w-[60%]">
							{ room.Players[i].Username }
						</h4>
						if room.CurrentTurn == i {
							<span class="text-[10px] text-[var(--btn-hover)] font-semibold">
								{ i18n.T(lang, "rolling") }
							</span>
						} else {
							<span class="text-[10px] text-[var(--btn-hover)] font-medium">
								{ i18n.T(lang, "waiting_dots") }
							</span>
						}
					</div>
					<div class="mb-2" id={ "other-dice-" + room.Players[i].ID }>
						@SmallDiceRow(room.Dice, room.CurrentTurn == i)
					</div>
					<div class="flex justify-center">
						@SmallScoreCardTable(lang, room.Players[i])
					</div>
				</div>
			}
		</div>
	}
}
